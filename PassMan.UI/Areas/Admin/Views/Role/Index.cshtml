@model List<Core.Entities.Concrete.Member>

@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "_LayoutAdmin";
}


<div>
    <table class="table table-response table-hovered">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Rol Ad</th>
            <th>İşlemler</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <th scope="row">@m.Id</th>
                <td>@m.Name</td>
                <td></td>
                @* <td><a asp-controller="Password" asp-action="Details" asp-route-id="@m.Id" class="btn btn-info">Detaylar</a> </td>*@

            </tr>
        }
        </tbody>
    </table>
</div>