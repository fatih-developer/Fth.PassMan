@model CalendarListViewModel


<div class="row float-end">
    <div class="float-end">
        <a asp-action="Add" asp-controller="Takvim" class="btn btn-primary">Yeni Kayıt</a>
    </div>
</div>
<br />

<div class="container-fluid">
    <div class="row">
        <div>
                <table class="table table-response table-hovered">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Yıl</th>
                        <th scope="col">Ay</th>
                        <th scope="col">Haftası</th>
                        <th scope="col">Gün</th>
                        <th>İşlemler</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var m in Model.calendar.Data)
                    {
                        <tr>
                            <th scope="row">@m.Id</th>
                            <td>@m.Year</td>
                            <td>@m.Month</td>
                            <td>@m.Week</td>
                            <td>@m.Day</td>
                            <td><a asp-controller="Password" asp-action="Details" asp-route-id="@m.Id" class="btn btn-info">Detaylar</a> </td>

                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        

    </div>
</div>