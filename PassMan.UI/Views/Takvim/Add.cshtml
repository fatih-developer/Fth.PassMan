@model CalendarAddViewModel
@{

    var years = new List<SelectListItem>()
    {
        new SelectListItem {Text = "Yıl Seçiniz", Value = "0", Selected = true},
        new SelectListItem {Text = "2023", Value = "2023"},
        new SelectListItem {Text = "2024", Value = "2024"},
        new SelectListItem {Text = "2025", Value = "2025"},

    };

    var months = new List<SelectListItem>()
    {
        new SelectListItem {Text = "Ay Seçiniz", Value = "0", Selected = true},
        new SelectListItem {Text = "Ocak", Value = "1"},
        new SelectListItem {Text = "Şubat", Value = "2"},
        new SelectListItem {Text = "Mart", Value = "3"},
        new SelectListItem {Text = "Nisan", Value = "4"},
        new SelectListItem {Text = "Mayıs", Value = "5"},
        new SelectListItem {Text = "Haziran", Value = "6"},
        new SelectListItem {Text = "Temmuz", Value = "7"},
        new SelectListItem {Text = "Ağustos", Value = "8"},
        new SelectListItem {Text = "Eylül", Value = "9"},
        new SelectListItem {Text = "Ekim", Value = "10"},
        new SelectListItem {Text = "Kasım", Value = "11"},
        new SelectListItem {Text = "Aralık", Value = "12"},
    };


    var weeks = new List<SelectListItem>()
    {
        new SelectListItem {Text = "Hafta Seçiniz", Value = "0", Selected = true},
        new SelectListItem {Text = "1", Value = "1"},
        new SelectListItem {Text = "2", Value = "2"},
        new SelectListItem {Text = "3", Value = "3"},
        new SelectListItem {Text = "4", Value = "4"},
       
    };
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-9">
            <div class="text-center">

                <form asp-controller="Takvim" asp-action="Add" method="post">

                    <div class="form-group col-md-3">
                        <select asp-for="Calendar.Year" id="Calendar.Year" name="Calendar.Year" class="form-control" asp-items="@(years)"></select>
                    </div>

                  
                    <br>

                    <div class="form-group col-md-3">
                        
                        <select asp-for="Calendar.Month" id="Calendar.Month" name="Calendar.Month" class="form-control" asp-items="@(months)"></select>
                    </div>

                    <br>


                    <div class="form-group col-md-3">
                        <select asp-for="Calendar.Week" id="Calendar.Week" name="Calendar.Week" class="form-control" asp-items="@(weeks)"></select>
                    </div>

                    <br>
                    
                    <div class="form-group col-md-3">
                        <input asp-for="Calendar.Day" class="form-control" id="inputName" placeholder="Gün">
                    </div>
                    
                    <br>

                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </form>

            </div>
        </div>
    </div>
</div>